@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Pages/Shared/_Layout.cshtml";
    }
}


<div class="d-flex align-items-center">
    <partial name="_BackButton" model="@(new ButtonAttr{PageUrl = "../Index", Title = "Quay lại danh sách người dùng"})" />
    <div class="ms-5">
        <h2>Quản lý tài khoản: <span class="text-danger">@Model.user.UserName</span></h2>
    </div>
</div>

<div>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
