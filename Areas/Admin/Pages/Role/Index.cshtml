@page "/admin/roles"
@model IndexModel
@{
    ViewData["Title"] = "Danh sách các Role";
    int STT = 1;
}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="Model.StatusMessage"/>

<div class ="mt-3">
    <a asp-page="./Create" class="btn btn-primary">Tạo thêm</a>
</div>
<table class="table table-dark table-striped table-hover my-3 w-75">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Tên Role</th>
            <th>Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.roles)
        {
            <tr>
                <th scope="col">
                    @(STT++)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => role.Name)
                </td>
                <td>
                    <a asp-page="./Edit" class="btn btn-success" asp-route-roleid="@role.Id">Sửa</a>
                    <a asp-page="./Delete" class="btn btn-danger" asp-route-roleid="@role.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>